							.advant__item
								.advant__icon
									+svg('ic-check','ic-check', '16', '12')
								.advant__text= item.text
	
	section.services-wrap.m-indent
		.container
			.row
				.col-12
					h2.h1.text-center Услуги

			.services
				.row
					-
						var list=[
							{title:'Дефектация корпусов судов и механизмов', text:'Фирма имеет опыт выполнения работ под надзором Bureau Veritas'},
							{title:'Ремонт корпусов судов', text:'Все технические руководители фирмы являются дипломированными инженерами-кораблестроителями'},
							{title:'Ремонт винто-рулевых комплексов (в т.ч. ВРШ и МИШ)', text:'Фирма имеет опыт выполнения работ под надзором Bureau Veritas'},
							{title:'Ремонт и центровка валопроводов', text:'Все технические руководители фирмы'},
							{title:'Электротехнические и электромонтажные работы', text:'Фирма имеет опыт выполнения работ под надзором Bureau Veritas'},
							{title:'Ремонт главных и вспомогательных двигателей', text:'Фирма имеет опыт выполнения работ под надзором Bureau Veritas'},
							{title:'Ремонт донно-забортной арматуры', text:'Все технические руководители фирмы являются дипломированными инженерами-кораблестроителями'},
							{title:'Ремонт систем и трубопроводов', text:'Фирма имеет опыт выполнения работ под надзором Bureau Veritas'},
							{title:'Ремонт судовых котельных установок', text:'Все технические руководители фирмы являются дипломированными инженерами-кораблестроителями'},
