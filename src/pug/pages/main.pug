						.col-md-4.col-lg-3
							.services__item
								.services__title
									a(href="#")= item.title
								.services__text= item.text
		
	section.projects-wrap.m-indent
		.container
			.row
				.col-12
					h2.h1.text-center Наши проекты

					.project-slider.js-project-slider
						-
							var list=[
								{img:'project1.jpg', title:'Проект 82390 «Моторная яхта» (т/х «Никита», построен в 2003 г.)'},
								{img:'project2.jpg', title:'Проект 911В Судно экологического обеспечения «РЕДУТ» (построен в 2006 г.)'},
								{img:'project3.jpg', title:'Проект 8276 «Плавучий ресторан» (т/х «Дунаевский», построен в 2007 г.)'},
								{img:'project2.jpg', title:'Проект 911В Судно экологического обеспечения «РЕДУТ» (построен в 2006 г.)'},
								{img:'project1.jpg', title:'Проект 82390 «Моторная яхта» (т/х «Никита», построен в 2003 г.)'},
								{img:'project3.jpg', title:'Проект 8276 «Плавучий ресторан» (т/х «Дунаевский», построен в 2007 г.)'},
								{img:'project2.jpg', title:'Проект 911В Судно экологического обеспечения «РЕДУТ» (построен в 2006 г.)'},
								{img:'project3.jpg', title:'Проект 8276 «Плавучий ресторан» (т/х «Дунаевский», построен в 2007 г.)'},
								{img:'project2.jpg', title:'Проект 911В Судно экологического обеспечения «РЕДУТ» (построен в 2006 г.)'},
							]
