extends ../layout/main

block variables
	- var title = 'Главная';

block content
	section.top-header
		.container
			.row
				.col-12
					h1 ООО «СУДОЭКОЛОГИЯ», основанное в 1989 году, основным видом деятельности которого является судостроение и судоремонт
					
	section.top-img(style="background-image: url(assets/img/top-img.jpg)")
		img(src="assets/img/top-img.jpg", alt="")

	section.advant-wrap.mb-indent
		.container
			.row
				.col-12
					.advant
						-
							var list=[
								{text:'Более 30 лет на рынке'},
								{text:'Собственные производственные мощности'},
								{text:'Работаем с крупнейшими заказчиками'},
								{text:'Тоннаж до 50 млрд тонн'},
