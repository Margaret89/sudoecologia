							.form-site__bottom
								button(type="submit").btn.js-btn-submit
									.btn__text Отправить
									.btn__blobs
										div
										div
										div

								.form-site__polit.js-form-site-polit
									.input-check.input-check_light
										input#polit1(type='checkbox', checked='checked', required="required")
										label.input-check__label(for='polit1')
											span.input-check__mark
												+svg('ic-check','ic-check', '10', '8')
