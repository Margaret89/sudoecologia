							.project-item
								a(href="#").project-item__img-wrap
									.project-item__img(style="background-image: url(assets/img/"+item.img+")")
								
								.project-item__title
									a(href="#")= item.title

								.pr-item-param
									-
										var params=[
											{label:'длина габаритная', val:'24,2', val2:'м'},
											{label:'ширина габаритная', val:'6,2', val2:'м'},
											{label:'высота борта', val:'2,8', val2:'м'},
											{label:'водоизмещение', val:'85,0', val2:'т'},
											{label:'число и мощность главных двигателей VOLVO-PENTA', val:'2х173', val2:'кВт'},
										]
									
									each param in params
										.pr-item-param__item
											.pr-item-param__label= param.label
											.pr-item-param__val= param.val
												|&nbsp
												= param.val2

					.projects-wrap__more
						a.btn(href='#')
							.btn__text Все проекты
							.btn__blobs
								div
								div
								div

	section.docs-wrap.m-indent
		.container
			.row
				.col-lg-4
					h2.h1 Лицензии и сертификаты

				.col-lg-8
					.docs-list
						-
							var list=[
								{img:'certificate1.jpg'},
								{img:'certificate2.jpg'},
								{img:'certificate1.jpg'},
								{img:'certificate2.jpg'},
							]
						each item in list
							.docs-list__item
								a(href='assets/img/'+item.img data-fancybox='certificate')
									img(src='assets/img/'+item.img alt='')

	section.about-contacts.mb-indent
		.container
			.row
				.col-md-6.col-lg-4
					.about-contacts__text
						h2.h1 Где мы находимся

						.contact-item
							.contact-item__icon
								+svg('ic-place','ic-place', '25', '22')

							.contact-item__text 193036, Россия, Санкт-Петербург, 4-я Советская ул., д. 7

				.col-md-6.col-lg-8
					.about-contacts__img
						img(src="assets/img/map.jpg", alt="")

	section.partners-slider-wrap.m-indent
		.container
			.row
				.col-12
					h2.h1.text-center Клиенты

					.partners-slider.js-partners-slider
						-
							var list=[
								{img:'partner1.svg', text:'ООО «Морские Пропульсивные Системы»'},
								{img:'partner2.svg', text:'ООО «МПКБ»'},
								{img:'partner3.svg', text:'СЦ «ЭВЕРС»'},
								{img:'partner4.svg', text:'ГУП «ПИЛАРН»'},
								{img:'partner2.svg', text:'ООО «МПКБ»'},
								{img:'partner3.svg', text:'СЦ «ЭВЕРС»'},
